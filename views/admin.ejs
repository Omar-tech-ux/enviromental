<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon-32x32.png">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="content-wrap">
        <div class="header">
            <div class="logo-item"> <a href="homepage.html"><img src="/images/logo.png" alt=""></a></div>
            <div class="nav-items">
                <div class="language-selector">
                    <i class="fas fa-globe"></i>
                    <select id="language-select">
                        <option value="en">English</option>
                        <option value="tr">Türkçe</option>
                    </select>
                </div>
                <div class="nav-link"> <a href="/" data-en="Home" data-tr="Ana Sayfa">Home</a></div>
                <div class="nav-link"> <a href="/about" data-en="About Us" data-tr="Hakkımızda">About Us</a>
                </div>
                <div class="nav-link"> <a href="/solutions" data-en="Solutions" data-tr="Çözümler">Solutions </a>
                </div>
                <div class="nav-link"> <a href="/contact" data-en="Contact Us" data-tr="İletişim">Contact Us</a>
                </div>
                <a href="javascript:void(0);" class="icon" onclick="toggleNavItems()">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
        </div>
        <section class="mb-5">
            <div class="form-area">
                <div class="container">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="left">
                                <h2>Admin Panel</h2>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% messages.forEach(message=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= message.id %>
                                            </th>
                                            <td>
                                                <%= message.name %>
                                            </td>
                                            <td>
                                                <%= message.email %>
                                            </td>
                                            <td>
                                                <%= message.message %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="footer">
        <div class="footer-img"><img src="/images/logo.png" alt=""></div>
        <div class="footer-links">
            <div class="footer-link">Articles</div>
            <div class="footer-link">Link Two</div>
            <div class="footer-link">Link Three</div>
            <div class="footer-link"><a href="contactus.html">Contact</a></div>
        </div>
        <div class="footer-divider"></div>
        <div class="footer-legal">
            <div class="legal-text">@ 2024 Nurturing Environmental Awareness </div>
        </div>
    </div>
    <script src="/js/index.js"></script>
</body>

</html>